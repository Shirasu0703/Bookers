<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><% pluralize(@book.errors.count, "error") %> error occurred</h2>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

<h3>Title</h3>
<%= f.text_field :title %>

<h3>Body</h3>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>

<% end %>


